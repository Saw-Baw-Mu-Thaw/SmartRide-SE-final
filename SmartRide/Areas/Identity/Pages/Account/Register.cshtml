@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_RegisterLayout";
}


<div class="alert alert-info" >
    <p>Want to register as a driver?</p>
    <a class="link-primary" asp-area="Identity" asp-page="/Account/DriverRegister">Click here</a>
</div>

<div class="row m-auto"> 
    <div class="col-md-4 col-12">
        <h3>Customer Register</h3>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-page-handler="Customer">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="CustModel.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="CustModel.Email">Email</label>
                <span asp-validation-for="CustModel.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="CustModel.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="CustModel.Username">Full name</label>
                <span asp-validation-for="CustModel.Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="CustModel.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="CustModel.PhoneNumber">Phone Number</label>
                <span asp-validation-for="CustModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="CustModel.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="CustModel.Password">Password</label>
                <span asp-validation-for="CustModel.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="CustModel.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="CustModel.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="CustModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

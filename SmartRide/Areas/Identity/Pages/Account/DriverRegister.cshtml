@page
@model SmartRide.Areas.Identity.Pages.Account.DriverRegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_RegisterLayout";
}

<div class="row m-auto">
    <div class="col-md-4 col-12">
        <h3>Driver Register</h3>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-page-handler="Driver">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="DrivModel.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="DrivModel.Email">Email</label>
                <span asp-validation-for="DrivModel.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DrivModel.Fullname" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="DrivModel.Fullname">Full name</label>
                <span asp-validation-for="DrivModel.Fullname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DrivModel.VIN" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="DrivModel.VIN">VIN(Vehicle Identification Number)</label>
                <span asp-validation-for="DrivModel.VIN" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DrivModel.Description" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="DrivModel.Description">Car Description</label>
                <span asp-validation-for="DrivModel.Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DrivModel.License" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="DrivModel.License">Driver License</label>
                <span asp-validation-for="DrivModel.License" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select class="form-select" asp-for="DrivModel.VehicleType" aria-label="Default select example">
                    <option value="Car" selected>Car</option>
                    <option value="Bike">Bike</option>
                </select>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DrivModel.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="DrivModel.Password">Password</label>
                <span asp-validation-for="DrivModel.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DrivModel.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="DrivModel.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="DrivModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
